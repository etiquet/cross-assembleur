**	test carte mpu avec afficheur led segments commandé*   directement par le port b *porta		equ	$00portb		equ	$01portc		equ	$02portd		equ	$03ddra		equ	$04ddrb		equ	$05ddrc		equ	$06timerData	equ	$08timerCtrl	equ	$09MiscReg		equ	$0asciCtrl		equ	$10sciSTS		equ	$11sciData		equ	$12									org	$0100main						lda	#$ff			sta	ddrb			sta	ddra						lda	#$00			sta	porta						sta	$80			sta	$81			sta	$82			sta	$83			sta	$84			sta	$85			sta	$86			sta	$87			sta	$88			countup		ldx	#$00			toto		lda	$80,X			inc	a			cmp	#$f			bhi	sup			sta	$80,x			bra	affichagesup			lda	#$00			sta	$80,x			inc	x			cpx	#8			bne	toto			affichage	ldx		#$00loop		lda		#$ff			sta		portb			txa			lsl		a			lsl		a			lsl		a			lsl		a			sta		porta			lda		$80,x			jsr		Conv			sta		portb						jsr		attente						inc		x			cpx		#8			bne		loop			jmp		countupConv		stx		$89			tax					lda		table,x			eor		#$ff			ldx		$89			rtsattente		lda		#$80att			sub 	#$01			tst		a			bne		att			rts				table		dc.b	$3f,$06,$5b,$4f,$66,$6d,$7d,$07,$7f,$6f			dc.b	%01011111			dc.b	%01111100			dc.b	%01011000			dc.b	%01011110			dc.b	%01111001			dc.b	%01110001					org	$1ffe			dc.w	main			end