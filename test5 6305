**	test carte mpu avec afficheur led segments commandé*   directement par le port b*  	lecture de la carte VITC*porta		equ	$00portb		equ	$01portc		equ	$02portd		equ	$03ddra		equ	$04ddrb		equ	$05ddrc		equ	$06timerData	equ	$08timerCtrl	equ	$09MiscReg		equ	$0asciCtrl		equ	$10sciSTS		equ	$11sciData		equ	$12									org	$0100main						lda	#$ff			sta	ddrb			sta	ddrc			lda	#$f0			sta	ddra						lda	#$00			sta	porta			sta	portc						cli						affichage	ldx		#$00loop		lda		#$ff			sta		portb			txa			lsl		a			lsl		a			lsl		a			lsl		a			sta		porta			lda		$80,x			jsr		Conv			sta		portb						jsr		attente						inc		x			cpx		#8			bne		loop			jmp		affichageConv		stx		$90			tax					lda		table,x			eor		#$ff			ldx		$90			rtsattente		lda		#$80att			sub 	#$01			tst		a			bne		att			rts	int			bil		int			ldx		#$00			lda		#$ff			sta		portb			sta		portc			loopint		txa			lsl		a			lsl		a			lsl		a			lsl		a			sta		porta			lda		porta			and		#$0f			eor		#$0f			sta		$80,x			inc		x			cpx		#$f			bcs		loopint			lda		#$00			sta		portc			rti						table		dc.b	$3f,$06,$5b,$4f,$66,$6d,$7d,$07,$7f,$6f			dc.b	%01011111			dc.b	%01111100			dc.b	%01011000			dc.b	%01011110			dc.b	%01111001			dc.b	%01110001					org	$1ffa			dc.w	int					org	$1ffe			dc.w	main			end